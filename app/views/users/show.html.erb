<div class="content business-content">
    <h1>Your Businesses</h1>

    <ul class="business-list">
        <% unless @user.businesses.nil? %>
            <% @user.businesses.each do |business| %>
                <li class="business-tile">
                    <a class="business-name" href="<%= business_url(business) %>"><%= business.name %></a>
                    <p><%= business.description %></p>
                    <%= link_to "Delete", business_url(business), method: 'DELETE' %>
                </li>
            <% end %>
        <% end %>
    </ul>

    <a href="<%= new_business_url %>">Create a new business!</a>
</div>