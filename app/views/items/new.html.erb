<h1>Create a new item!</h1>

<form action="<%= items_url %>" method="post">
    <%= auth_token %>

    <label for="name">Name</label>
    <input type="text" id="name" name="item[name]">

    <label for="description">Description</label>
    <textarea id="description" name="item[description]" rows="4" cols="50"></textarea>

    <label for="quantity">Quantity</label>
    <input type="number" id="quantity" name="item[quantity]" min="0" step="1">

    <input type="hidden" name="item[business_id]" value="<%= @item.business_id %>">

    <input type="submit" value="Create!">

    <br>
</form>

<a href="<%= business_url(@item.business_id) %>">Return to business</a>